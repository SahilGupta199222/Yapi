        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:paddingTop="@dimen/etVerticalPadding"
        android:paddingBottom="@dimen/_5sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topConstraints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/etHorizontalPadding"
            android:layout_marginEnd="@dimen/etHorizontalPadding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearChatArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/ivChatCall"
                app:layout_constraintTop_toTopOf="@+id/ivChatCall">

                <ImageView
                    android:id="@+id/ivChatBack"
                    android:layout_width="@dimen/extraIconSize"
                    android:layout_height="@dimen/extraIconSize"
                    android:layout_gravity="center_vertical"
                    android:onClick="@{mViewModel::onClick}"
                    android:rotation="180"
                    android:src="@drawable/arrow_forward"
                    android:visibility="@{mViewModel.backButtonVisible?mView.VISIBLE:mView.GONE}"
                    app:tint="@color/medium_grey_color" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.yapi.common.RoundRectCornerImageView
                        android:id="@+id/ivGroupImage"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/temp_group_image"
                        android:visibility="@{mViewModel.groupImageVisible?mView.VISIBLE:mView.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:id="@+id/relNameValue"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/et_drawable"
                        android:backgroundTint="#FEFAE5"
                        android:visibility="@{mViewModel.noImageOnlyNameVisible?mView.VISIBLE:mView.GONE}"
                        android:orientation="horizontal"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

